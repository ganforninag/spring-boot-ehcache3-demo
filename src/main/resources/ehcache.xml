<?xml version="1.0" encoding="UTF-8"?>
<eh:config
  xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
  xmlns:eh='http://www.ehcache.org/v3'
  xmlns:jcache='http://www.ehcache.org/v3/jsr107'
  xsi:schemaLocation="
        http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-core-3.3.xsd
        http://www.ehcache.org/v3/jsr107 http://www.ehcache.org/schema/ehcache-107-ext-3.3.xsd">

    <eh:service>
        <jcache:defaults>
            <jcache:cache name="invoices" template="itcljTemplate"/>
        </jcache:defaults>
    </eh:service>

    <eh:cache-template name="itcljTemplate" >
        <eh:expiry>
            <eh:ttl unit="millis">200</eh:ttl>
        </eh:expiry>
    </eh:cache-template>

    <eh:cache alias="users" uses-template="itcljTemplate">
        <eh:key-type>java.lang.String</eh:key-type>
        <eh:value-type>com.itclj.model.UserBean</eh:value-type>
        <eh:heap unit="entries">200</eh:heap>
    </eh:cache>

</eh:config>
